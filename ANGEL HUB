-- Keybind to toggle GUI
local toggleKey = Enum.KeyCode.RightShift
u.InputBegan:Connect(function(input, gpe)
	if not gpe and input.KeyCode == toggleKey then
		gui.Enabled = not gui.Enabled
	end
end)

addButton("Unload GUI", function()
	gui:Destroy()
end)

addButton("Reset Layout", function()
	gui.Position = UDim2.new(0.2, 0, 0.2, 0)
end)

addButton("Turn Off All", function()
	for _, child in pairs(contentFrame:GetChildren()) do
		if child:IsA("TextButton") and string.find(child.Text, "ON") then
			child:Click()
		end
	end
end)
-- ESP Handler
local RunService = game:GetService("RunService")
local espConnections = {}

function createESP(player)
    if player == LocalPlayer then return end
    if not player.Character or not player.Character:FindFirstChild("HumanoidRootPart") then return end

    local box = Drawing.new("Square")
    box.Color = Color3.new(1, 1, 1)
    box.Thickness = 2
    box.Transparency = 1
    box.Visible = true
    espConnections[player] = {box = box}

    RunService.RenderStepped:Connect(function()
        if not player.Character or not player.Character:FindFirstChild("HumanoidRootPart") then
            box.Visible = false
            return
        end

        local pos, onscreen = camera:WorldToViewportPoint(player.Character.HumanoidRootPart.Position)
        if onscreen then
            box.Visible = true
            box.Position = Vector2.new(pos.X - 25, pos.Y - 50)
            box.Size = Vector2.new(50, 100)
        else
            box.Visible = false
        end
    end)
end

function clearESP()
    for _, v in pairs(espConnections) do
        if v.box then
            v.box:Remove()
        end
    end
    espConnections = {}
end

-- Toggle ESP
local espEnabled = false
createToggle("ESP", "Box ESP", function(on)
    espEnabled = on
    if on then
        for _, player in ipairs(Players:GetPlayers()) do
            createESP(player)
        end
        Players.PlayerAdded:Connect(function(p)
            wait(1)
            createESP(p)
        end)
    else
        clearESP()
    end
end)

-- === FLY ===
local flying = false
local flySpeed = 50
local bodyGyro, bodyVel

function startFly()
    local char = LocalPlayer.Character
    if not char or not char:FindFirstChild("HumanoidRootPart") then return end
    bodyGyro = Instance.new("BodyGyro")
    bodyGyro.P = 9e4
    bodyGyro.MaxTorque = Vector3.new(9e9, 9e9, 9e9)
    bodyGyro.CFrame = char.HumanoidRootPart.CFrame
    bodyGyro.Parent = char.HumanoidRootPart

    bodyVel = Instance.new("BodyVelocity")
    bodyVel.Velocity = Vector3.new(0, 0, 0)
    bodyVel.MaxForce = Vector3.new(9e9, 9e9, 9e9)
    bodyVel.Parent = char.HumanoidRootPart

    RunService.RenderStepped:Connect(function()
        if flying then
            bodyGyro.CFrame = workspace.CurrentCamera.CFrame
            bodyVel.Velocity = workspace.CurrentCamera.CFrame.LookVector * flySpeed
        end
    end)
end

function stopFly()
    if bodyGyro then bodyGyro:Destroy() end
    if bodyVel then bodyVel:Destroy() end
end

createToggle("FLY", "Fly", function(on)
    flying = on
    if on then
        startFly()
    else
        stopFly()
    end
end)

-- === SETTINGS: Turn Off All ===
createButton("SETTINGS", "Turn Off All", function()
    for name, toggle in pairs(toggles) do
        toggle.state = false
        toggle.button.BackgroundColor3 = Color3.new(1, 1, 0) -- Yellow
        if toggle.callback then
            toggle.callback(false)
        end
    end
end)

