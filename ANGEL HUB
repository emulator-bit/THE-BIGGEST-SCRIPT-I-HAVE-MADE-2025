local function addGlobalOffButton()
    local globalOffBtn = Instance.new("TextButton")
    globalOffBtn.Size = UDim2.new(0.5, 0, 0, 30)
    globalOffBtn.Position = UDim2.new(0.25, 0, 1, -35)
    globalOffBtn.Text = "TURN OFF ALL TOGGLES"
    globalOffBtn.BackgroundColor3 = Color3.fromRGB(255, 80, 80)
    globalOffBtn.TextColor3 = Color3.new(1, 1, 1)
    globalOffBtn.Parent = contentFrame

    globalOffBtn.MouseButton1Click:Connect(function()
        for _, toggle in pairs(toggleStates) do
            toggle:setState(false)
        end
    end)
end

addGlobalOffButton()
