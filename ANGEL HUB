-- Services
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local LocalPlayer = Players.LocalPlayer
local Mouse = LocalPlayer:GetMouse()

-- State
local toggles = {}
local vectorForce = nil
local flyConnection = nil

-- Utility: Create Toggle Button
function createToggle(name, parent, callback)
	local button = Instance.new("TextButton")
	button.Size = UDim2.new(0.9, 0, 0, 40)
	button.Position = UDim2.new(0.05, 0, 0, #parent:GetChildren() * 45)
	button.BackgroundColor3 = Color3.fromRGB(255, 255, 0)
	button.BorderSizePixel = 0
	button.Text = name
	button.TextColor3 = Color3.new(0, 0, 0)
	button.Parent = parent

	local state = false
	toggles[name] = false

	button.MouseButton1Click:Connect(function()
		state = not state
		toggles[name] = state
		button.BackgroundColor3 = state and Color3.fromRGB(0, 120, 255) or Color3.fromRGB(255, 255, 0)
		callback(state)
	end)
end

-- ❌ Turn Off All Toggles
function turnOffAllToggles()
	for name, state in pairs(toggles) do
		if state then
			toggles[name] = false
		end
	end
	for _, btn in ipairs(gui:GetDescendants()) do
		if btn:IsA("TextButton") and toggles[btn.Text] ~= nil then
			btn.BackgroundColor3 = Color3.fromRGB(255, 255, 0)
		end
	end
	if vectorForce then vectorForce:Destroy() end
	if flyConnection then flyConnection:Disconnect() end
end

-- 🔫 No Recoil
local function noRecoil(enable)
	if not enable then return end
	local mt = getrawmetatable(game)
	setreadonly(mt, false)
	local oldNamecall = mt.__namecall
	mt.__namecall = newcclosure(function(self, ...)
		local method = getnamecallmethod()
		if method == "FireServer" and tostring(self):lower():find("recoil") then
			return nil
		end
		return oldNamecall(self, ...)
	end)
end

-- ✈️ Fly
local function fly(enable)
	if not enable then
		if vectorForce then vectorForce:Destroy() end
		if flyConnection then flyConnection:Disconnect() end
		return
	end

	local root = LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("HumanoidRootPart")
	if not root then return end

	local att = Instance.new("Attachment", root)
	vectorForce = Instance.new("VectorForce")
	vectorForce.Force = Vector3.zero
	vectorForce.Attachment0 = att
	vectorForce.RelativeTo = Enum.ActuatorRelativeTo.World
	vectorForce.ApplyAtCenterOfMass = true
	vectorForce.Name = "FlyForce"
	vectorForce.Parent = root

	local speed = 100
	flyConnection = RunService.RenderStepped:Connect(function()
		local move = Vector3.zero
		if UserInputService:IsKeyDown(Enum.KeyCode.W) then move += workspace.CurrentCamera.CFrame.LookVector end
		if UserInputService:IsKeyDown(Enum.KeyCode.S) then move -= workspace.CurrentCamera.CFrame.LookVector end
		if UserInputService:IsKeyDown(Enum.KeyCode.A) then move -= workspace.CurrentCamera.CFrame.RightVector end
		if UserInputService:IsKeyDown(Enum.KeyCode.D) then move += workspace.CurrentCamera.CFrame.RightVector end
		vectorForce.Force = move.Unit * speed * 100
	end)
end

-- 🎯 Aimbot
local aimbotEnabled = false
RunService.RenderStepped:Connect(function()
	if aimbotEnabled and workspace:FindFirstChild("Players") then
		local closest, minDist = nil, math.huge
		for _, plr in ipairs(Players:GetPlayers()) do
			if plr ~= LocalPlayer and plr.Character and plr.Character:FindFirstChild("Head") then
				local screenPos, visible = workspace.CurrentCamera:WorldToScreenPoint(plr.Character.Head.Position)
				if visible then
					local dist = (Vector2.new(Mouse.X, Mouse.Y) - Vector2.new(screenPos.X, screenPos.Y)).Magnitude
					if dist < minDist then
						minDist = dist
						closest = plr
					end
				end
			end
		end
		if closest and closest.Character and closest.Character:FindFirstChild("Head") then
			workspace.CurrentCamera.CFrame = CFrame.new(workspace.CurrentCamera.CFrame.Position, closest.Character.Head.Position)
		end
	end
end)

-- 📦 Box ESP
local function boxESP(enable)
	for _, plr in ipairs(Players:GetPlayers()) do
		if plr == LocalPlayer then continue end
		local char = plr.Character
		if char and char:FindFirstChild("Head") then
			local highlight = char:FindFirstChild("Highlight") or Instance.new("Highlight", char)
			highlight.FillColor = Color3.fromRGB(255, 0, 0)
			highlight.OutlineColor = Color3.fromRGB(255, 255, 255)
			highlight.Enabled = enable
		end
	end
end

-- 🛡️ Anti-Ban
local function antiBan(enable)
	if not enable then return end
	hookfunction(LocalPlayer.Kick, function(...) return end)
	LocalPlayer.Kick = function() end
end

-- Add Features to Tabs
createToggle("Aimbot", CombatTab, function(on) aimbotEnabled = on end)
createToggle("No Recoil", CombatTab, noRecoil)
createToggle("Fly", FlyTab, fly)
createToggle("Box ESP", ESPTab, boxESP)
createToggle("Anti-Ban", MainTab, antiBan)

-- Turn Off All Toggles Button
