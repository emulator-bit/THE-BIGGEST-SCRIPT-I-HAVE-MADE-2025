	-- Placeholder
end)

-- Fly Tab
addToggle("Fly", function(state)
	if state then
		local char = lp.Character
		if not char then return end
		local hrp = char:WaitForChild("HumanoidRootPart")
		local bv = Instance.new("BodyVelocity")
		bv.Name = "FlyForce"
		bv.MaxForce = Vector3.new(1e5, 1e5, 1e5)
		bv.Velocity = Vector3.new(0, 0, 0)
		bv.Parent = hrp

		flyConn = game:GetService("RunService").Heartbeat:Connect(function()
			if not hrp or not bv then return end
			local move = Vector3.new(
				(u:IsKeyDown(Enum.KeyCode.D) and 1 or 0) - (u:IsKeyDown(Enum.KeyCode.A) and 1 or 0),
				(u:IsKeyDown(Enum.KeyCode.Space) and 1 or 0) - (u:IsKeyDown(Enum.KeyCode.LeftControl) and 1 or 0),
				(u:IsKeyDown(Enum.KeyCode.S) and 1 or 0) - (u:IsKeyDown(Enum.KeyCode.W) and 1 or 0)
			)
			local cam = workspace.CurrentCamera.CFrame
			bv.Velocity = (cam.RightVector * move.X + cam.UpVector * move.Y + cam.LookVector * move.Z) * 80
		end)
	else
		if flyConn then flyConn:Disconnect() end
		local flyForce = lp.Character and lp.Character:FindFirstChild("HumanoidRootPart") and lp.Character.HumanoidRootPart:FindFirstChild("FlyForce")
		if flyForce then flyForce:Destroy() end
	end
end)

