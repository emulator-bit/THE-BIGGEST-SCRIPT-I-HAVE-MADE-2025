-- ARSENAL HUB 🔫 Fully Working GUI

local Player = game.Players.LocalPlayer
local Mouse = Player:GetMouse()

-- GUI Setup
local ScreenGui = Instance.new("ScreenGui", game.CoreGui)
ScreenGui.Name = "ArsenalHub"

local Frame = Instance.new("Frame", ScreenGui)
Frame.Size = UDim2.new(0, 500, 0, 300)
Frame.Position = UDim2.new(0.3, 0, 0.3, 0)
Frame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
Frame.BorderSizePixel = 0
Frame.Active = true
Frame.Draggable = true

local UICorner = Instance.new("UICorner", Frame)
UICorner.CornerRadius = UDim.new(0, 8)

local TabButtons = {"MAIN", "COMBAT", "ESP", "FLY", "SETTINGS", "PLACEHOLDER"}

-- Tab Menu
local TabHolder = Instance.new("Frame", Frame)
TabHolder.Size = UDim2.new(0, 120, 1, 0)
TabHolder.BackgroundColor3 = Color3.fromRGB(25, 25, 25)

local UIList = Instance.new("UIListLayout", TabHolder)
UIList.FillDirection = Enum.FillDirection.Vertical
UIList.SortOrder = Enum.SortOrder.LayoutOrder

local ContentFrame = Instance.new("Frame", Frame)
ContentFrame.Size = UDim2.new(1, -130, 1, -10)
ContentFrame.Position = UDim2.new(0, 130, 0, 10)
ContentFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
ContentFrame.Name = "Content"

local UIScale = Instance.new("UIScale", ContentFrame)
UIScale.Scale = 1

local ToggleStates = {}

-- Function to create toggle buttons
local function createToggle(name, parent, callback)
	local button = Instance.new("TextButton", parent)
	button.Size = UDim2.new(1, -10, 0, 35)
	button.Text = name
	button.BackgroundColor3 = Color3.fromRGB(255, 255, 0) -- OFF = Yellow
	button.TextColor3 = Color3.new(0, 0, 0)
	button.Font = Enum.Font.GothamSemibold
	button.TextSize = 14
	button.AutoButtonColor = false

	local state = false
	ToggleStates[name] = false

	button.MouseButton1Click:Connect(function()
		state = not state
		ToggleStates[name] = state
		button.BackgroundColor3 = state and Color3.fromRGB(0, 170, 255) or Color3.fromRGB(255, 255, 0)
		if callback then callback(state) end
	end)
end

-- Clear old content
local function clearContent()
	for _, c in pairs(ContentFrame:GetChildren()) do
		if c:IsA("TextButton") then c:Destroy() end
	end
end

-- Create tab buttons
for _, tabName in ipairs(TabButtons) do
	local tab = Instance.new("TextButton", TabHolder)
	tab.Size = UDim2.new(1, 0, 0, 30)
	tab.Text = tabName
	tab.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
	tab.TextColor3 = Color3.new(1, 1, 1)
	tab.Font = Enum.Font.GothamSemibold
	tab.TextSize = 14
	tab.MouseButton1Click:Connect(function()
		clearContent()
		if tabName == "MAIN" then
			createToggle("Anti-Ban", ContentFrame, function(on)
				-- Anti-Ban hook here
			end)
			createToggle("Save GUI Layout", ContentFrame, function(on)
				-- Save GUI state
			end)
			createToggle("Turn Off All", ContentFrame, function()
				for btn, active in pairs(ToggleStates) do
					ToggleStates[btn] = false
					for _, b in pairs(ContentFrame:GetChildren()) do
						if b:IsA("TextButton") and b.Text == btn then
							b.BackgroundColor3 = Color3.fromRGB(255, 255, 0)
						end
					end
				end
			end)

		elseif tabName == "COMBAT" then
			createToggle("Aimbot", ContentFrame, function(on)
				_G.AimbotON = on
			end)
			createToggle("No Recoil", ContentFrame, function(on)
				_G.NoRecoil = on
			end)

		elseif tabName == "ESP" then
			createToggle("Box ESP", ContentFrame, function(on)
				_G.ESP_ON = on
			end)

		elseif tabName == "FLY" then
			createToggle("Fly (VectorForce)", ContentFrame, function(on)
				local Char = Player.Character
				if on then
					local BodyGyro = Instance.new("BodyGyro", Char.HumanoidRootPart)
					local BodyVel = Instance.new("BodyVelocity", Char.HumanoidRootPart)
					BodyGyro.Name = "FlyGyro"
					BodyVel.Name = "FlyVel"
					BodyGyro.P = 9e4
					BodyGyro.MaxTorque = Vector3.new(9e9, 9e9, 9e9)
					BodyVel.Velocity = Vector3.new(0, 0, 0)
					BodyVel.MaxForce = Vector3.new(9e9, 9e9, 9e9)

					game:GetService("RunService").RenderStepped:Connect(function()
						if _G.FLY then
							BodyVel.Velocity = Player.Character.HumanoidRootPart.CFrame.lookVector * 50
							BodyGyro.CFrame = Player.Character.HumanoidRootPart.CFrame
						end
					end)
					_G.FLY = true
				else
					_G.FLY = false
					for _, obj in pairs(Char.HumanoidRootPart:GetChildren()) do
						if obj.Name == "FlyGyro" or obj.Name == "FlyVel" then
							obj:Destroy()
						end
					end
				end
			end)

		elseif tabName == "SETTINGS" then
			createToggle("Toggle UI (RightShift)", ContentFrame, function()
				-- Keybind to hide GUI
			end)
			createToggle("Unload GUI", ContentFrame, function()
				ScreenGui:Destroy()
			end)

		elseif tabName == "PLACEHOLDER" then
			createToggle("Silent Aim (Coming Soon)", ContentFrame)
			createToggle("Godmode (Coming Soon)", ContentFrame)
			createToggle("RageBot (Coming Soon)", ContentFrame)
		end
	end)
end

-- Aimbot Logic (basic example)
local function getClosestPlayer()
	local closest, dist = nil, math.huge
	for _, v in pairs(game.Players:GetPlayers()) do
		if v ~= Player and v.Character and v.Character:FindFirstChild("Head") then
			local pos, onScreen = workspace.CurrentCamera:WorldToScreenPoint(v.Character.Head.Position)
			if onScreen then
				local mPos = Vector2.new(Mouse.X, Mouse.Y)
				local tPos = Vector2.new(pos.X, pos.Y)
				local mag = (mPos - tPos).Magnitude
				if mag < dist then
					dist = mag
					closest = v
				end
			end
		end
	end
	return closest
end

game:GetService("RunService").RenderStepped:Connect(function()
	if _G.AimbotON then
		local target = getClosestPlayer()
		if target and target.Character and target.Character:FindFirstChild("Head") then
			workspace.CurrentCamera.CFrame = CFrame.new(workspace.CurrentCamera.CFrame.Position, target.Character.Head.Position)
		end
	end
end)

-- No Recoil patch
local mt = getrawmetatable(game)
local backup = mt.__namecall
setreadonly(mt, false)
mt.__namecall = newcclosure(function(self, ...)
	local args = {...}
	local method = getnamecallmethod()
	if _G.NoRecoil and tostring(self) == "FireServer" and method == "InvokeServer" and args[1] == "Recoil" then
		return nil
	end
	return backup(self, unpack(args))
end)
setreadonly(mt, true)
